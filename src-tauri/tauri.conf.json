{
  "productName": "Books",
  "version": "0.0.3",
  "identifier": "net.mavgrik.books",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Books",
        "resizable": true,
        "fullscreen": false,
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage", "nsis", "msi", "dmg"],
    "category": "Education",
    "shortDescription": "another note taking app but with books",
    "macOS": {
      "minimumSystemVersion": "11"
    },
    "windows": {
      "allowDowngrades": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
